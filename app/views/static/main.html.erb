<div class="row homepage-contents">
  <div class="col-md-1">
  </div>
  <div class="col-md-2 anchor">
    <button class="btn-lg btn-primary center-block detail-button">Awaiting Commands</button>
    <div class="feature-summary hidden">
      <h3>Awaiting Commands</h3>
      <a class="close-link">Close</a>
    </div>
  </div>
  <div class="col-md-3 anchor">
    <button class="btn-lg btn-primary center-block detail-button">Send Message Blast</button>
    <div class="feature-summary hidden">
      <h3>All Customers MMS</h3>
      <%= form_tag("/notifications/blast", method: "post") do %>
        <%= label_tag(:body, "Body") %><br>
        <%= text_area_tag(:body) %><br><br>
        <%= label_tag(:media_url, "Image URL") %><br>
        <%= text_area_tag(:media_url) %><br><br>
        <%= submit_tag("Send to Everyone!", class: "btn btn-success bl-border") %>
      <% end %>
      <a class="close-link">Close</a>
    </div>

  </div>

  <div class="col-md-3 anchor">
    <button class="btn-lg btn-primary center-block detail-button">Send Targeted Message</button>
    <div class="hidden feature-summary">
      <h3>Targeted MMS</h3>
      <%= form_tag("/notifications/notify", method: "post") do %>
        <%= label_tag(:phone, "Phone") %><br>
        <%= text_field_tag(:phone) %><br><br>
        <%= label_tag(:body, "Body") %><br>
        <%= text_area_tag(:body) %><br><br>
        <%= label_tag(:media_url, "Image URL") %><br>
        <%= text_area_tag(:media_url) %><br><br>
        <%= submit_tag("Send to customer!", class: "btn btn-success bl-border") %>
      <% end %>
      <a class="close-link">Close</a>
    </div>
  </div>
</div>
