
<div class="row">
  <div class="col-md-4 text-center">  
    <p id="notice"><%= notice %></p>
    <h1>Listing Customers</h1>
    <table>
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Phone</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.first_name %></td>
            <td><%= customer.last_name %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.email %></td>
            <td><%= link_to 'Show', customer %></td>
            <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
            <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4 text-center">
    <p id="notice"><%= notice %></p>

    <h1>Listing Outreaches</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Image Url</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @outreaches.each do |outreach| %>
          <tr>
            <td><%= outreach.name %></td>
            <td><%= outreach.image %></td>
            <td><%= outreach.description %></td>
            <td><%= link_to 'Show', outreach %></td>
            <td><%= link_to 'Edit', edit_outreach_path(outreach) %></td>
            <td><%= link_to 'Delete', outreach, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4 text-center">
    <p id="notice"><%= notice %></p>

    <h1>Listing Spreadsheets</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Identifier</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @spreadsheets.each do |spreadsheet| %>
          <tr>
            <td><%= spreadsheet.name %></td>
            <td><%= spreadsheet.identifier %></td>
            <td><%= link_to 'Delete', spreadsheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>